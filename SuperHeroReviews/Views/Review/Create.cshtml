@model SuperHeroReviews.Models.ReviewModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <h4>Review</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <p>Review:</p>
                    @*<label asp-for="Content" class="control-label"></label>*@
                    <textarea name="Review" rows="10" cols="30" class="form-control"></textarea>
                    <span asp-validation-for="Review" class="text-danger"></span>
                </div><br>
                <div class="form-group">
                    <p>Name:</p>
                    <label asp-for="ReviewerName" class="control-label"></label>
                    <input asp-for="ReviewerName" class="form-control" />
                    <span asp-validation-for="ReviewerName" class="text-danger"></span>
                </div><br>
                <div class="form-group">
                    <p>Rating:</p>
                    <label asp-for="Rating" class="control-label"></label>
                    <select name="Rating">
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                    @*<input type="range" asp-for="Rating" class="form-control"min="1" max="5"/>*@
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div><br>

                <div class="form-group">
                    <p>ReviewDate:</p>
                    <label asp-for="ReviewDate" class="control-label"></label>
                    <input asp-for="ReviewDate" class="form-control" />
                    <span asp-validation-for="ReviewDate" class="text-danger"></span>
                </div><br>
                      <div class="form-group">
                          @*<label asp-for="ProductID" class="control-label"></label>*@\
                          <input type="hidden" asp-for="ID" />
                          <input type="hidden" name="HeroModelID" class="form-control" />
                      </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>
